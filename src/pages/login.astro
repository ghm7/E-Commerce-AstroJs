---
import '../css/bootstrap.min.css'
import Layout from '../layouts/Main.layout.astro'
import MainHead from '../components/MainHead.component.astro';
import LoginCard from '../components/LoginCard.component.astro'
import Footer from '../components/Footer.component.astro'
---

<Layout>
	<main class="mt-5 mt-md-0 mt-lg-5">
		<LoginCard />
		<script src="../js/login.js"></script>
	</main>
</Layout>

<style>
	body {
		background-color: rgb(248, 249, 250);
	}
	
	main {
		height: 100dvh;

		background-image: url('img/cover_back_logo.png');
		background-size: contain;
		background-repeat: no-repeat;
	}

	@media (width >= 768px) {
		main {
			width: 60dvw;
			height: 87dvh;
			
			margin: 0 auto;
		}
	}

	@media (width >= 1024px) {
		main {
			width: 100dvw;

			background-image: url('img/cover_back_without_personita.png');
			background-size: contain;
			background-repeat: no-repeat;
    }
	}
</style>